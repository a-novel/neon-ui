{
  "name": "@a-novel/neon-ui",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint:stylecheck": "prettier --check . --config prettier.config.ts",
    "lint:typecheck": "tsc",
    "lint:eslint": "pnpm dlx eslint .",
    "lint": "pnpm lint:stylecheck && pnpm lint:typecheck && pnpm lint:eslint",
    "format": "prettier --write . --config prettier.config.ts",
    "build": "rm -rf ./dist && vite build && tsc --build tsconfig.build.json"
  },
  "author": "A-Novel",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-novel/neon-ui.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.1.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.0.2",
    "react": "^19.1.0"
  },
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "npm": ">=10.9.2",
    "node": ">=23.11.0"
  }
}
